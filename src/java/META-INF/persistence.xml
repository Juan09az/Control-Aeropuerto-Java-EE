<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="AeropuertoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>entities.Usuario</class>
    <class>entities.Persona</class>
    <class>entities.Origen</class>
    <class>entities.Pasajero</class>
    <class>entities.Aeropuerto</class>
    <class>entities.Aerolinea</class>
    <class>entities.Avion</class>
    <class>entities.Destino</class>
    <class>entities.Reserva</class>
    <class>entities.Pago</class>
    <class>entities.Pais</class>
    <class>entities.Clase</class>
    <class>entities.Ciudad</class>
    <class>entities.Vuelo</class>
    <class>entities.AdminAerolinea</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/aerof"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="123"/>
    </properties>
  </persistence-unit>
</persistence>
